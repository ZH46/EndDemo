<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
              android:textSize="20sp" android:textColor="@color/black" android:id="@+id/idTV" android:text="1"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
              android:textSize="20sp" android:textColor="@color/black" android:id="@+id/nameTV" android:text="2"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
              android:textSize="20sp" android:textColor="@color/black" android:id="@+id/otherTV" android:text="3"/>
    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/delete"
               android:background="@mipmap/ic_launcher_delete"/>
</LinearLayout>