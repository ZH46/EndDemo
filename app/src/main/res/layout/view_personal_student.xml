<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightgrey"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="120dp"
                  android:orientation="vertical" android:background="@color/white">
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/stu_name" android:textStyle="bold" android:textColor="@color/coral"
                  android:layout_marginTop="20dp" android:background="@null"
                  android:textSize="25sp" android:layout_marginLeft="40dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/stu_role" android:textColor="@color/gray"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="40dp" android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="10dp" android:background="@color/white"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_grade" android:textColor="@color/black" android:layout_margin="5dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_professional" android:textColor="@color/black" android:layout_margin="5dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_class" android:textColor="@color/black" android:layout_margin="5dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_id" android:textColor="@color/black" android:layout_margin="5dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_bir" android:textColor="@color/coral" android:background="@null"
                  android:layout_margin="5dp"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/stu_phone" android:textColor="@color/coral" android:background="@null"
                  android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>